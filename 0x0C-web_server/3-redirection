#!/usr/bin/env bash
# Configures your Nginx server so that /redirect_me is redirecting to another page

sudo apt-get -y update
sudo apt-get -y install nginx
ufw allow 'Nginx HTTP'
# installs nginx
sudo chmod -R 755 /var/www
sudo chmod -R 777 /etc/nginx
echo "Hello World!" > /var/www/html/index.html

# Overwrrites the contents of /redirect_me. Redirects to a youtube video
REPLACEMENT="server_name_;\n\trewrite ^\/redirect_me https:\/\/youtu.be\/nuNvRFOXn3w?si=JvnxyjMZY0E4ifC4 permanent;"
sudo sed -i "s/server_name;/$REPLACEMENT/" /etc/nginx/sites-available/default

sudo service nginx restart
